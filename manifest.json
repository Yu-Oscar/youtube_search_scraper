{
  "manifest_version": 3,
  "name": "YouTube Search Scraper",
  "version": "1.1.0",
  "description": "Auto-scroll and scrape YouTube search results.",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": { 
    "default_popup": "popup.html", 
    "default_title": "YT Scraper",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://www.youtube.com/*"]
}
