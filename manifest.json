{
  "manifest_version": 3,
  "name": "YouTube Search Scraper",
  "version": "1.1.0",
  "description": "Export YouTube search results to JSON format for offline viewing and organization.",
  "author": "Oscar Yu",
  "homepage_url": "https://github.com/Yu-Oscar/youtube_search_scraper",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png", 
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": { 
    "default_popup": "popup.html", 
    "default_title": "YouTube Search Scraper",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
